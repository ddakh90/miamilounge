{% extends 'admin/base.html.twig' %}

{% block title %}Administration des comptes{% endblock %}

{% block body %}
<div class="container-fluid">

    <h1 class="my-5">Administration des comptes</h1>
        <table class="table table-hover">
        <thead>
            <tr>
                <th>Identifiant</th>
                <th>Compte</th>
                <th>Email</th>
                <th>Introduction</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for user in pagination.data %}
            <tr>
                <td>{{user.id}}</td>
                <td>
                    <img src="{{user.picture}}" alt="avatar de {{user.fullName}}" class="avatar avatar-micro mr-2">
                    {{user.fullName}}
                </td>
                <td>{{user.email}}</td>
                <td>{{user.introduction}}</td>
                <td>{{user.description | raw}}</td>
                <td>
                    <a href="{{ path('admin_user_edit', { 'id' : user.id }) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <a href="{{ path('admin_user_delete', { 'id' : user.id }) }}" class="btn btn-danger" onclick="return confirm(`ÃŠtes vous sur de vouloir supprimer ce compte ?`)"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            {% endfor %}

        </tbody>

    </table>
    {{ pagination.display() }}
</div>
{% endblock %}
